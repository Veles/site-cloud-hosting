global
    daemon
    maxconn 256
{% if haproxy_stats_socket %}
    stats socket {{ haproxy_stats_socket }}
{% endif %}

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

listen cluster
    bind {{ ansible_enp0s8["ipv4"]["address"] }}:80
    mode http
    stats enable
    balance roundrobin

    server web1 192.168.33.10 check port 80
    server web2 192.168.33.11 check port 80
    server web3 192.168.33.12 check port 80


   option httpchk HEAD /index.php HTTP/1.0

